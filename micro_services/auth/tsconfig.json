{
  "extends": "@packages/tsconfig/react.json",
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "preserve",
    "baseUrl": ".",
    "rootDir": ".",
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "noEmit": true,
    "jsxImportSource": "@emotion/react",
    "paths": {
      "auth/*": ["src/*"]
    }
  },
  "include": ["."],
  "exclude": ["node_modules"]
}
