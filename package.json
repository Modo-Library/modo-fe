{
  "name": "modo-fe",
  "version": "0.1.0",
  "description": "Modo Project on Frontend",
  "scripts": {
    "dev": "run-p \"dev:*\"",
    "dev:css": "npm run generate:css -- --watch",
    "dev:mfa": "npm run mfa",
    "dev:host": "vite",
    "build": "npm run generate:css && tsc && vite build",
    "preview": "vite --port 5000 --strictPort",
    "auth": "run-p \"auth:*\"",
    "auth:css": "npm run generate:css -- --watch",
    "auth:dev": "npm run dev -workspace=@workspace/auth",
    "books": "run-p \"books:*\"",
    "books:css": "npm run generate:css -- --watch",
    "books:dev": "npm run dev -workspace=@workspace/books",
    "mfa": "run-p \"mfa:*\"",
    "mfa:auth": "npm run build -workspace=@workspace/auth && npm run preview -workspace=@workspace/auth",
    "mfa:books": "npm run build -workspace=@workspace/books && npm run preview -workspace=@workspace/books",
    "aws": "dotenv -e .env -- cross-var ssh %SSH_HOST%",
    "test": "jest",
    "generate:css": "npx tailwindcss -i ./packages/styles/global.css -o ./packages/styles/tailwind-LEGACY.css",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "{src,packages,microServices}/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "workspaces": [
    "microServices/*",
    "packages/*"
  ],
  "dependencies": {
    "axios": "^1.3.3",
    "npm-run-all": "^4.1.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.43.1",
    "react-icons": "^4.7.1",
    "react-router-dom": "^6.13.0",
    "sass": "^1.63.6"
  },
  "devDependencies": {
    "@iconify/react": "^4.1.1",
    "@originjs/vite-plugin-federation": "^1.2.3",
    "@packages/assets": "0.1.0",
    "@packages/components": "0.1.0",
    "@packages/config": "0.1.0",
    "@packages/styles": "0.1.0",
    "@packages/tsconfig": "0.1.0",
    "@types/node": "18.13.0",
    "@types/react": "^18.0.37",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.13",
    "cross-var": "^1.1.0",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.38.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-next": "13.1.6",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "postcss": "^8.4.21",
    "prettier": "^2.8.4",
    "recoil": "^0.7.7",
    "tailwindcss": "^3.2.6",
    "typescript": "^5.0.2",
    "vite": "^4.3.9",
    "vite-plugin-svgr": "^3.2.0"
  }
}
