{
  "name": "modo-fe",
  "version": "0.1.0",
  "description": "Frontend Modo Project using Monorepo Architecture",
  "scripts": {
    "dev": "run-p \"dev:*\"",
    "dev:css": "npm run generate:css -- --watch",
    "dev:mfa": "npm run mfa",
    "dev:host": "vite",
    "build": "npm run generate:css && tsc && vite build",
    "preview": "vite --port 5000 --strictPort",
    "auth": "run-p \"auth:*\"",
    "auth:css": "npm run generate:css -- --watch",
    "auth:dev": "npm run dev -workspace=@workspace/auth",
    "books": "run-p \"books:*\"",
    "books:css": "npm run generate:css -- --watch",
    "books:dev": "npm run dev -workspace=@workspace/books",
    "mfa": "run-p \"mfa:*\"",
    "mfa:auth": "npm run build -workspace=@workspace/auth && npm run preview -workspace=@workspace/auth",
    "mfa:books": "npm run build -workspace=@workspace/books && npm run preview -workspace=@workspace/books",
    "aws": "dotenv -e .env -- cross-var ssh %SSH_HOST%",
    "lint": "eslint .",
    "test": "jest",
    "generate:css": "npx tailwindcss -i ./packages/styles/global.css -o ./packages/styles/tailwind-LEGACY.css",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "{src,packages}/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "microServices/Auth/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix --config microServices/Auth/.eslintrc.js",
      "prettier --write"
    ],
    "microServices/Books/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix --config microServices/Books/.eslintrc.js",
      "prettier --write"
    ]
  },
  
  "workspaces": [
    "microServices/*",
    "packages/*",
    "packages/config/eslint-config-preset"
  ],
  "dependencies": {
    "@packages/config": "^0.1.0",
    "npm-run-all": "^4.1.5",
    "react-hook-form": "^7.43.1",
    "sass": "^1.63.6"
  },
  "devDependencies": {
    "@packages/assets": "^0.1.0",
    "@packages/components": "^0.1.0",
    "@packages/config": "^0.1.0",
    "@packages/styles": "^0.1.0",
    "@packages/tsconfig": "^0.1.0",
    "eslint": "^8.38.0",
    "eslint-config-preset": "^0.1.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-next": "13.1.6",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4"
  }
}
